  asset_host: {{ asset_host }}
  cloudfront_distribtion_id: {{ cloudfront_distribtion_id }}
  smtp_address: {{ smtp_address }}
  smtp_port: {{ smtp_port }}
  smtp_domain: {{ smtp_domain }}
  smtp_user_name: {{ smtp_user_name }}
  smtp_password: {{ smtp_password }}
  smtp_authentication: {{ smtp_authentication }}
  notification_email: {{ notification_email }}
  notification_user_name: {{ notification_user_name }}
  notification_password: {{ notification_password }}
  notification_to: {{ notification_to }}
  carousel_list_id: {{ carousel_list_id }}
  restricted_ips:
{% for ip_addr in restricted_ips %}
    - {{ ip_addr }}
{% endfor %}
  chat:
    chat_url: {{ chat_url }}
    mongo_url: {{ chat_mongo_url }} 
    api_url: {{ chat_api_url }}
    admin_username: {{ chat_admin_username }}
    admin_password: {{ chat_admin_password }}
  recaptcha:
    site_key: {{ recaptcha_site_key }}
    secret_key: {{ recaptcha_secret_key }}

test:
  <<: *defaults

development:
  <<: *defaults

production:
  <<: *defaults
