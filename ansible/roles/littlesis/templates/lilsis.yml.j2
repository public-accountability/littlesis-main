  google_custom_news_search_engine_id: {{ google_custom_news_search_engine_id }}
  google_custom_search_key: {{ google_custom_search_key }}
  google_street_view_key: {{ google_street_view_key }}
  default_from_email: {{ default_from_email }}
  default_to_email: {{ default_to_email }}
  admins_only: false
  convert_new_legacy_notes: true
  research_from_email: {{ research_from_email }}
  netmap_api_key: {{ netmap_api_key }}
  netmap_default_width: 960
  netmap_default_height: 550
  twitter_consumer_key: {{ twitter_consumer_key }}
  twitter_consumer_secret: {{ twitter_consumer_secret }}
  twitter_access_token: {{ twitter_access_token }}
  twitter_access_token_secret: {{ twitter_access_token_secret }}
  twitter_list_id: {{ twitter_list_id }}
  google_site_verification: {{ google_site_verification }}
