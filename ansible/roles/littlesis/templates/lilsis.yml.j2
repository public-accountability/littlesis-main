defaults: &defaults
  aws_key: {{ aws_key }}
  aws_secret: {{ aws_secret }}
  aws_region: {{ aws_region }} 
  aws_s3_base: {{ aws_s3_base }}
  aws_s3_bucket: {{ aws_s3_bucket }}
